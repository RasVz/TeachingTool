<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wtb.javatool.dao.EnterPriseMapper">
    <insert id="addEnterprise">
        INSERT INTO enterprise (enterprise_name)
        VALUES (#{enterpriseName})
    </insert>
    <delete id="deleteEnterprise">
        delete from enterprise where enterprise_id in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            (#{item.enterpriseId})
        </foreach>
    </delete>
    <update id="updateEnterprise">
        update enterprise set enterprise_name = #{enterpriseName} where enterprise_id = #{enterpriseId}
    </update>
</mapper>
